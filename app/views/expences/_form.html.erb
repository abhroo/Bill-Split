    <%= f.label :group_id %><br />
    <%= f.collection_select(:group_id, Group.all, :id, :name, prompt: true) %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :user_ids %><br />
    <div id="user_list">
      <%= render :partial=>"load_users" %>	
    </div>	
  </div>
  <div class="field">
    <%= f.label :amount, "Total Amount" %><br />
    <%= f.text_field :amount %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
